<% title "Description" %>

<% @painting = Painting.find(params[:id]) %>



<p id="notice"><%= notice %></p>

<div class= "show">
  <h2 style="text-align:center;position:absolute;width:inherit;">File</h2>
  <div class= "show-heading">
  <%= link_to image_tag('home.png', :size=>'32x32'), root_path, :class=>"button"%>
  <%= link_to image_tag('close.png', :size=>'32x32'), @painting, :class=>"button", :confirm => 'Are you sure?', :method => :delete %>
  </div>

<div class="icon">
  <%= image_tag(@painting.image_url, :size=> "180x180") %>
  <p><b><%= @painting.name %></b></p>
</div>

<div class="side">
<p>
  <b>Name:</b>
  <%= @painting.name%>
<p>
<p>
  <b>Description</b>
  <%= @painting.description%>
<p>

<p>
  <%= link_to 'Download', @painting.image_url%>
<p>


<p>
  <%= link_to "Edit this File", edit_painting_path(@painting) %>  
</p>

</div>
</div>
<br />


<div class= "show">
  <h2 style="text-align:center;position:relative;width:inherit;">Comments</h2>
  <div class="body">
  <%= render :partial => "comments/comment",
             :collection => @painting.comments %>
  <br>
  <h2>Add a comment</h2>
    <%= render "comments/form" %>
  </div>
</div>
